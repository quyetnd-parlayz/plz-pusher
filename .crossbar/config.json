
{
   "controller": {
   },
   "workers": [
      {
         "type": "router",
         "realms": [
            {
               "name": "public",
               "roles": [
                  {
                     "name": "anonymous",
                     "permissions": [
                        {
                           "uri": "*",
                           "publish": false,
                           "subscribe": true,
                           "call": false,
                           "register": false
                        }
                     ]
                  },
                  {
                     "name": "pusher",
                     "permissions": [
                        {
                           "uri": "*",
                           "publish": true,
                           "subscribe": true,
                           "call": true,
                           "register": true
                        }
                     ]
                  }
               ]
            }
         ],
         "transports": [
            {
               "type": "web",
               "endpoint": {
                  "type": "tcp",
                  "port": 8080
               },
               "paths": {
                  "/": {
                     "type": "static",
                     "directory": "../web"
                  },
                  "ws": {
                     "type": "websocket"
                  },
                  "push": {
                     "type": "pusher",
                     "realm": "public",
                     "role": "pusher",
                     "options": {
                        "post_body_limit": 8192,
                        "timestamp_delta_limit": 10,
                        "require_ip": ["172.17.0.0/255.255.0.0", "127.0.0.1"],
                        "require_tls": false
                     }
                  }
               }
            }
         ]
      }
   ]
}
